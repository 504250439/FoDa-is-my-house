<!--pages/test2/test2.wxml-->
<view class="postInfomation">
    <form bindsubmit='uploadPost'>

        <view class="postTitle">
            <text >物品名称:</text>
            <input name="post_title" class="post_title"  placeholder="物品名称"/>
        </view>

        <view class="goodsPrice">
            <text >物品价格</text>
            <input name="goods_price" placeholder="物品价格"/>
        </view>

        <view class="goodsType">
            <text >物品类型</text>
            <picker name="goods_type_num" bindchange="bindPickerChange" value="{{type_index}}" range="{{types}}">
                <view class="picker">
                    当前选择：{{types[type_index]}}
                </view>
            </picker>
        </view>

        <view class="goodsImg">
            <text >放照片</text>
            <button bindtap="chooseImage" >
                上传图片
            </button>
        </view>

        <view class="postContent">
            <text >物品描述</text>
            <textarea  name="goods_content" auto-height placeholder="自动变高" />
        </view>

        <view class="choose">
            <button class="" form-type='submit'>
                发布闲置
            </button>
        </view>
    </form>

    <view class="goodsImage">
        <block wx:for="{{images}}" wx:key="*this">
            <view class="q-image-wrap">
            <!-- 图片缩略图  -->
            <image class="q-image" src="{{item}}" mode="aspectFill" data-idx="{{index}}" bindtap="handleImagePreview"></image>
            </view>
            <view class="q-image-remover" data-idx="{{index}}" bindtap="removeImage">删除</view>
        </block>
    </view>

</view>