.post .userInformation{
    display: flex;
    border-radius: 10px;
     width:720rpx; /**宽度*/
     height:100rpx; 
     margin: 7.5rpx 15rpx 7.5rpx 15rpx;
    flex-direction: row;
    background:#fff;
    
   
}

.post .userInformation .userImg{
    width: 70rpx;
    height: 70rpx;
    padding: 0 20rpx;
      line-height:100rpx;
    background:#fff;
    border-radius: 20px;
    
    
    
}

.post .userInformation .userImg image{
    width: 70rpx;
    height: 70rpx;
    border-radius: 90rpx;
