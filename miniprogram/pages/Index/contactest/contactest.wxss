}

.post .postInformation .postContent{
    padding: 10rpx 20rpx; 

}

.post .postInformation .goodsImg{
    padding: 10rpx 20rpx; 
    width: 600rpx;
    height: 600rpx;
   justify-content: center;
}
.post .postInformation .goodsImg image{
    width: 600rpx;
    height: 600rpx;
}




