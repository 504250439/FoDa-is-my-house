<!-- pages/mine_main/mine_main.wxml -->
<cu-custom bgColor="bg-gradual-blue" isBack="{{false}}">
	<view slot="content">佛大叮当</view>
</cu-custom>
<view class="mine_top">
  <navigator url="../registered/registered" class="mine_cell">

    <view class="mine_avatar_bd">

    <!-- <image class="mine_avatar" src="/images/per1.png" /> -->
      <image wx:if="{{userData.approve_img}}" class="mine_avatar" src="/images/per.png " />
      <image wx:else class="mine_avatar" src="/images/per1.png" />
    </view>
  </navigator>

  <navigator url="../registered/registered" class="mine_cell">
    <text class="margin-top-sm" wx:if="{{!userData.name.length}}" bindtap="registered">登录/注册</text>
  </navigator>
     <view class="mine_nickName">
      <view style="display:flex;justify-content:center;margin:0 0 10rpx 0">
        <text style="font-weight:bold">{{userData.name}}</text>
      </view>
    </view>
</view>

<view class="mine_cells2">

  <navigator url="../registered/registered" class="mine_cell">
    <image class="mine_icon" src="/images/my/geren.png" />
    <text class="mine_title">个人注册</text>
    <view class="mine_arrow"></view>
  </navigator>
</view>



<view class='mine_cells2'>
  <navigator url="../../News/myGoods/myGoods" class="mine_cell">
    <image class="mine_icon" src="/images/my/xianzhi.png" />
    <text class="mine_title">我的闲置</text>
    <view class="mine_arrow"></view>
  </navigator>
  <navigator url="../../News/myGoods/myGoods" class="mine_cell">
    <image class="mine_icon" src="/images/my/kuaidi.png" />
    <text class="mine_title">我的快递</text>
    <view class="mine_arrow"></view>
  </navigator>
  <navigator url="../../News/myGoods/myGoods" class="mine_cell">
    <image class="mine_icon" src="/images/my/suoshi.png" />
    <text class="mine_title">我的琐事</text>
    <view class="mine_arrow"></view>
  </navigator>
</view>

<view class='mine_cells2'>

  <navigator url="../feedback/feedback" class="mine_cell">
    <image class="mine_icon" src="/images/my/yijian.png" />
    <text class="mine_title">意见</text>
    <view class="mine_arrow"></view>
  </navigator>
  <navigator url="../setting/setting" class="mine_cell">
    <image class="mine_icon" src="/images/my/shezhi.png" />
    <text class="mine_title">设置</text>
    <view class="mine_arrow"></view>
  </navigator>

  <view wx:if="{{admin}}">
    <navigator url="../../Admin/admin_main/admin_main" class="mine_cell">
      <image class="mine_icon" src="/images/my/shezhi.png" />
      <text class="mine_title">管理员页面</text>
      <view class="mine_arrow"></view>
    </navigator>
  </view>
</view>